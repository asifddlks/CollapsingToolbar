<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/testCase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="50sp"
        android:text="Bangladesh"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:shadowColor="#33000000"
        android:shadowDx="2"
        android:shadowDy="4"
        android:shadowRadius="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/test_shadow"
        app:layout_constraintEnd_toEndOf="@+id/testCase"
        app:layout_constraintStart_toStartOf="@+id/testCase"
        app:layout_constraintTop_toBottomOf="@+id/testCase" />
</androidx.constraintlayout.widget.ConstraintLayout>